<p id="notice"><%= notice %></p>

<div class="container image">
  <div class="row">
    <div class="col-sm-8 col-lg-7">        

        <p class="thumbnail">
      
        <%= image_tag @product.image_url unless @product.image_url.nil? %>
        </p>
    </div>

<div class="col-sm-2 col-lg-4">

  <p>
    <strong>Year:</strong><%= @product.year %>
  </p>

  <p>
    <strong>Make:</strong><%= @product.make %>
  </p>

  <p>
    <strong>Model:</strong><%= @product.model %>
  </p>

  <p>
    <strong>Miles:</strong><%= @product.miles %>
  </p>

  <p>
    <strong>Color:</strong><%= @product.color %>
  </p>

  <p>
    <strong>Price:</strong><%= @product.price %>
  </p>

  <p>
    <strong>Description:</strong><%= @product.description %>
  </p>

  <p><strong>Average Rating:</strong> <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>

</div>

<div class="col-sm-2 col-lg-10">  
  <% if signed_in? %>
  <strong>Add a review:</strong>
    <%= form_for([@product, @product.comments.build]) do |f| %>
  
    
  <div class="Comments">
    <%= f.label :body, class: "form-control"  "Comments" %><br> 
    <%= f.text_area :body %>
    
  </div>

    <div class="rating">
      <%= f.label :body, "Rating" %><br>
    </div>  
    <p>
      <%= f.submit class: "btn btn-default" "Submit" %>
    </p>
      <% end %>
    <% end %>

    <%= render 'comments' %>
    <%= will_paginate @comments %>

</div>



<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>




