<p id="notice"><%= notice %></p>

<div class ="search-autos">

<h1>Search Autos</h1>

<div class="container-fluid">

  <div class="row">
    <% @products.each do |product| %>
      <div class="col-xs-6 col-md-4">
        <div class="thumbnail">
        <%= image_tag(product.image_url, class: "img-responsive") unless product.image_url.blank? %>
          <div class="caption">
          <h3><%= product.year%> <%= product.make %> <%= product.model %></h3>
          <h4><%= product.description %></h4>
          <h2><%= product.price %></h2>
            <%= link_to 'Show', product, class: "btn btn-link" %>
            <%= link_to 'Edit', edit_product_path(product), class: "btn btn-link" %>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
           </div>
         </div>
       </div>
    <% end %>
  </div>
<br>

<%= link_to 'New Product', new_product_path %>
